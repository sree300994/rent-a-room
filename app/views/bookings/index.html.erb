<div class="row">
	<div class="col-md-7">
		<div class="page-header">
			<h2>Listing Bookings</h2>
		</div>
		<% if @bookings.empty? %>
			<p> No Bookings Found </p>
		<% else %>
			<div id="bookingList">
				<ul>
					<% @bookings.each do |booking| %>
						<li>
							<p><b> User : </b><%= booking.user.username %> </p>
							<p><b> Mobile : </b><%= booking.user.mobile %></p>
							<p><b> Room_Name : </b><%= booking.room.name %></p>
							<p><b> Start_Date : </b><%= booking.start_date %> </p>
							<p><b> End_Date : </b><%= booking.end_date %></p>
							<p><b> Is_Confirmed : </b><%= booking.is_confirmed %></p>
							<p><b> Price : </b><%= booking.price %></p>
							<button type="button" class="btn btn-secondary"><%= link_to "Show", booking %></button>
						</li>
					<% end %>
				</ul>
			</div>
		<% end %>
	</div>
</div>

