<h2> Edit Amenity </h2>

<%= form_for @amenity do |f| %>
	<% if @amenity.errors.any? %>
		<h3>These errors prohibitted the form from being saved : </h3>
	<% else %>
		<ul>
			<% @amenity.errors.full_messages.each do |msg| %>
				<li> <%= msg %> </li>
			<% end %>
		</ul>
	<% end %>

	<label> Name : </label> </br>
	<%= f.text_field :name, autofocus: true %> </br>

	<label> Description : </label> </br>
	<%= f.text_area :description %> </br>

	<%= f.submit "Edit Amenity", class: "btn btn-secondary" %> or <button type="button" class="btn btn-secondary"><%= link_to "Back", amenities_path %></button>

<% end %>


