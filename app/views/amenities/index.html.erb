<h2> Listing Amenities </h2>
<% if @amenities.empty? %>
	<p> No Amenities found </p>
<% else %>
	<ul>
		<% @amenities.each do |amenity| %>
			<li> 
			<p> Name : <%= amenity.name %> </p>
			<p> Description : <%= amenity.description %> </p>
			<%= link_to "Show", amenity_path(amenity.id) %>
			</li>
		<% end %>
	</ul>
<% end %>
<% if can? :create, Amenity.new %>
	<%= link_to "Add Amenities", new_amenity_path %>
<% end %>

