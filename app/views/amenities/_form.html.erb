<%= form_for(@amenity, remote: true) do |f| %>

	<div class="form-group">
		<label> Name : </label> </br>
		<%= f.text_field :name, autofocus: true, class: "form-control" %> </br>
	</div>

	<div class="form-group">
		<label> Description : </label> </br>
		<%= f.text_area :description, class: "form-control" %> </br>
	</div>

	<%= f.submit "Add Amenity", class: "btn btn-secondary" %> or <button type="button" class="btn btn-secondary"><%= link_to "Back", amenities_path %></button>
<% end %>