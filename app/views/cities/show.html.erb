<div class="row">
	<div class="col-md-7">
		<div class="page-header">
			<h2><%= @city.name %></h2>
		</div>
		<p> Name : <%= @city.name %> </br> </p>
		<% if @city.rooms.empty? %>
			<p>No Rooms Found</p>
		<% else %>
			<h2>Listing Rooms</h2>
			<table class="table">
				<thead>
					<tr>
						<th>Name</th>
						<th>Description</th>
						<th>Address</th>
						<th>City</th>
						<th>Image</th>
						<th>Amenities</th>
					</tr>
				</thead>
				<tbody>
					<% @city.rooms.each do |room| %>
						<tr>
							<td><%= link_to room.name, room %></td>
							<td><%= room.description %></td>
							<td><%= room.address %></td>
							<td><%= room.city.name %></td>
							<td><%= image_tag room.images.url %></td>
							<td>
								<%= room.amenities.count %>
								<% room.amenities.each do |amenity| %>
									<li><%= amenity.name %></li>
								<% end %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<% end %>

		<%= link_to "List Cities", cities_path %>

		<% if can? :update, @city %>
			| <%= link_to "Edit", edit_city_path(@city.id) %> |
		<% end %>

		<% if can? :destroy, @city %>
			<%= link_to "Destroy", city_path(@city.id), method: :delete, data: {confirm: "Are you sure"} %>
		<% end %>
	</div>
	<div class="col-md-5">
		<div class="page-header">
			<h2>Google Map Route</h2>
		</div>
		<div id="map" style="height: 400px; width: 100%;"></div>
    <script src="http://maps.google.com/maps/api/js?key=AIzaSyBafn-hychG-pRtOJ78xkZ_KEwEdy7zSPw"></script>
	</div>
</div>

<script>
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 6,
      center: new google.maps.LatLng(17.355267, 82.54293249999999),
      mapTypeId: google.maps.MapTypeId.ROADMAP
    });

    var locations = []
    <% @city.rooms.each do |room| %>
    	locations.push([<%= room.latitude %>, <%= room.longitude %>])
    <% end %>
    console.log(locations);
    var infowindow = new google.maps.InfoWindow();

    var marker, i;

    for (i = 0; i < locations.length; i++) {  
      marker = new google.maps.Marker({
        position: new google.maps.LatLng(locations[i][0], locations[i][1]),
        map: map
      });

      google.maps.event.addListener(marker, 'click', (function(marker, i) {
        return function() {
          // infowindow.setContent(locations[i][0]);
          infowindow.open(map, marker);
        }
      })(marker, i));
    }
  </script>

