<h2> Edit City </h2>

<%= form_for @city do |f| %>
	<% if @city.errors.any? %>
		<h3>These errors are prohibitted the form from being saved : </h3>
		<ul>
			<% @city.errors.full_messages.each do |msg| %>
				<li><%= msg  %></li>
			<% end %>
		</ul>
	<% end %>

	<label> Name : </label> </br>
	<%= f.text_field :name, autofocus: true %> </br>

	<%= f.submit %> or <%= link_to "Back", cities_path %>
<% end %>